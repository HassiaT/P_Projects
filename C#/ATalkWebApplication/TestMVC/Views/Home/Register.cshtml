<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @{
        ViewBag.Title = "Register";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
</head>

<body>
    <h1>Sign up to ATalk!</h1>
    <div class="new-user-page">
        <h1>ATALK:Create new account</h1><br>
    </div>

    <div class="user-info">
        <form method="post">
            <input type="text" name="userUID" placeholder="Username">
            <input type="text" name="userLN" placeholder="Last name">
            <input type="text" name="userFN" placeholder="First name">
            <input type="password" name="pass" placeholder="Password">
            <input type="password" name="pass" placeholder="Confirm password">
            <input type="text" name="email" placeholder="Email address">
            <input type="submit" name="login" class="login login-submit" value="Register">
            </form>
    </div>
</body>
</html>

